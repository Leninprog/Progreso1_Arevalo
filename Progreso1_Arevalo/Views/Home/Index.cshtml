@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <img src="~/images/meme_prog.jpg" alt="Imagen del Hotel" class="meme" />

    <div class="mt-4">
        <input type="text" id="campoTexto" class="form-control form-control-lg w-50 mx-auto" placeholder="Escribe algo..." />
    </div>

    <div class="mt-3">
        <button class="btn btn-outline-info btn-lg" onclick="mostrarAlerta()">Mostrar Alerta</button>
    </div>
</div>

@section Scripts {
    <script>
        function mostrarAlerta() {
            const valorCampo = document.getElementById('campoTexto').value;
            const nombre = "Lenin Arevalo";
            const hobbie = "Escuchar musica, jugar, magia"; 

            alert(`Mi nombre es ${nombre}, mi hobbie es ${hobbie} y el valor del campo de texto es: ${valorCampo}`);
        }
    </script>
}

