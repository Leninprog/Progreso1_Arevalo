@model Progreso1_ArevaloLenin.Models.Cliente

@{
    ViewData["Title"] = "Create Cliente";
}

<h1>Create Cliente</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()  
    <div class="form-group">
        <label asp-for="Nombre" class="control-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ValorPagado" class="control-label"></label>
        <input asp-for="ValorPagado" class="form-control" />
        <span asp-validation-for="ValorPagado" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaRegistro" class="control-label"></label>
        <input asp-for="FechaRegistro" class="form-control" />
        <span asp-validation-for="FechaRegistro" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PlanRecompensaId" class="control-label"></label>
        <select asp-for="PlanRecompensaId" class="form-control">
            <option value="">Seleccione un Plan de Recompensa</option>
            @foreach (var plan in ViewBag.PlanesRecompensa as List<Progreso1_ArevaloLenin.Models.PlanRecompensa>)
            {
                <option value="@plan.Id">@plan.Nombre</option>
            }
        </select>
        <span asp-validation-for="PlanRecompensaId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Estado" class="control-label"></label>
        <input asp-for="Estado" type="checkbox" />
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-outline-info btn-lg">Create</button>
</form>

<a href="@Url.Action("Index")">Back to List</a>
